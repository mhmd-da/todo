{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "IdentityConfiguration": {
    "Issuer": "Identity",
    "Audience": "ToDo",
    "SigningSecret": "MySecretKeyForToDoApplication",
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateSigningSecret": true
  },

  "MongoDbConfiguration": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "ToDo"
  }
}
